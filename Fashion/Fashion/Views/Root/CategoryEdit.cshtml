@model ProductCategoryViewModel
@{
    ViewData["Title"] = "ProductAdd";
    Layout = "~/Views/Shared/_LayoutRoot.cshtml";
}
<div class="col-md-12">
    <div class="card card-primary mt-5 ml-3">
              <div class="card-header">
                <h3 class="card-title">Product Add</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <div class="row">
                  <div class="col-md-3"></div>
                  <div class="row">
                      <div class="col-md-6">
                          <div class="col-md-9">
                      <form asp-controller="Root" asp-action="CategoryEdit" method="post">
                  <div class="card-body">
                  <div class="form-group">
                    <label>Name</label>
                    <input name="Name" class="form-control"  Value="@Model.Category.Name">
                  </div>
                  <div class="form-group">
                    <label>Url</label>
                    <input name="Url" class="form-control"  Value="@Model.Category.Url">
                  </div>
                  <div class="form-group">
                    <label>Main Category</label>
                    <select name="MainCategoryId" class="form-control" asp-items="@ViewBag.Liste"></select>
                  </div>
                  
                 
                  </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Edit Main Category</button>
                </div>
              </form>
                  </div>
                      </div>
                    <div class="col-md-6">
                        <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Pictures</th>
                      <th>Name</th>
                      <th>Stock</th>
                      <th>Is Home</th>
                      <th>Price</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach (var item in Model.Product)
                   {
                    <tr>
                      <td>@item.Id</td>
                      <td><img src="~/img/product-img/@item.ImgUrl" width="80"></td>
                      <td>@item.Name</td>
                      <td>@item.Stock</td>
                                <td>@if (item.IsHome)
                                    {
                                     <span class="tag bg-success">Approved</span>                                   
                                    }
                                    else{
                                        <span class="tag bg-danger"> Not Approved</span>
                                    }
                                </td>
                                <td>@item.Price</td>
                                <td>
                                    <a asp-controller="Root" asp-action="ProductEdit" asp-route-url="@item.Url"><button class="btn btn-success">Edit</button></a>
                                   <form asp-controller="root" asp-action="categoryproductdelete">
                                        <input type="hidden" name="ProductId" value="@item.Id">
                                        <input type="hidden" name="CategoryId" value="@Model.Category.Id">

                                        <button type="submit" class="btn btn-danger">Delete</button>
                                   </form>
                                </td>
                    </tr>
                   }
                  </tbody>
                </table>
                    </d>
                  </div>
              
              </div>
            </div>
</div>

