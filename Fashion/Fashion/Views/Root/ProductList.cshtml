@model List<Product>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_LayoutRoot.cshtml";
}

<div class="col-md-10">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Fixed Header Table</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Pictures</th>
                      <th>Name</th>
                      <th>Stock</th>
                      <th>Is Home</th>
                      <th>Price</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach (var item in Model)
                   {
                    <tr>
                      <td>@item.Id</td>
                      <td><img src="~/img/product-img/@item.ImgUrl" width="80"></td>
                      <td>@item.Name</td>
                      <td>@item.Stock</td>
                                <td>@if (item.IsHome)
                                    {
                                     <span class="tag bg-success">Approved</span>                                   
                                    }
                                    else{
                                        <span class="tag bg-danger"> Not Approved</span>
                                    }
                                </td>
                                <td>@item.Price</td>
                                <td>
                                    <a asp-controller="Root" asp-action="ProductEdit" asp-route-url="@item.Url"><button class="btn btn-success">Edit</button></a>
                                   <form asp-controller="root" asp-action="productdelete">
                                       <input type="hidden" name="url" value="@item.Url">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                   </form>
                                </td>
                    </tr>
                   }
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
