@model Category
@{
    ViewData["Title"] = "ProductAdd";
    Layout = "~/Views/Shared/_LayoutRoot.cshtml";
}
<div class="col-md-9">
    <div class="card card-primary mt-5 ml-3">
              <div class="card-header">
                <h3 class="card-title">Product Add</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <div class="row">
                  <div class="col-md-3"></div>
                  <div class="col-md-9">
                      <form asp-controller="Root" asp-action="CategoryAdd" method="post">
                  <div class="card-body">
                  <div class="form-group">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Name" Value="@Model.Name">
                  </div>
                  <div class="form-group">
                    <label>Url</label>
                    <input asp-for="Url" class="form-control" placeholder="Enter Seo Url" Value="@Model.Url">
                  </div>
                  <div class="form-group">
                    <label>Main Category</label>
                    <select asp-for="MainCategoryId" class="form-control" asp-items="@ViewBag.Liste"></select>
                  </div>
                  
                 
                  </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Add Main Category</button>
                </div>
              </form>
                  </div>
              
              </div>
            </div>
</div>

