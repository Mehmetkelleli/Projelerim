                                            <li class="nav-item"><a class="nav-link" asp-controller="Shop" asp-action="List" asp-route-url="">Shopp</a></li>
                                            @foreach (var item in (List<MainCategory>)ViewBag.GetPopulerMainCategory)
                                           {
