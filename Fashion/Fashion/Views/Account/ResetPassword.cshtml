@model ResetPassword
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
 <div class="card">
    <div class="card-body login-card-body">
      <form asp-controller="Account" asp-action="ResetPassword" method="post">
        <div class="input-group mb-3">
          <input asp-for="Password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
          <input asp-for="RePassword" class="form-control" placeholder="RePassword">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span asp-validation-for="RePassword" class="text-danger"></span>
        </div>
        <div class="row">
          <div class="col-8">
          </div>
          <!-- /.col -->
          <input type="hidden" asp-for="UserId" value="@Model.UserId">
          <input type="hidden" asp-for="UserToken" value="@Model.UserToken">
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
    </div>
    <!-- /.login-card-body -->
  </div>

