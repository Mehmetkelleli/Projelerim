@model Login
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

 <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <form asp-controller="Account" asp-action="Login" method="post">
        <div class="input-group mb-3">
          <input asp-for="EMail" class="form-control" placeholder="E mail">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span class="text-danger" asp-validation-for="EMail"></span>

        </div>
        <div class="input-group mb-3">
          <input asp-for="Password" class="form-control" placeholder="Password">
          <span class="text-danger" asp-validation-for="Password"></span>

          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>


      <!-- /.social-auth-links -->

      <p class="mb-1">
        <a asp-controller="account" asp-action="FortgotPassword">I forgot my password</a>
      </p>
      <p class="mb-0">
        <a asp-controller="Account" asp-action="register" class="text-center">Register a new membership</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>