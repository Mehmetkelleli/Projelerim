@model Register
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

 <div class="card">
      <form asp-controller="Account" asp-action="Register" method="post">
    <div class="card-body login-card-body">
      

        <div class="input-group mb-3">
          <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Name">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="input-group mb-3">
          <input asp-for="UserName" value="@Model.UserName" class="form-control" placeholder="UserName">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="input-group mb-3">
          <input asp-for="LastName" value="@Model.LastName" class="form-control" placeholder="LastName">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="input-group mb-3">
          <input asp-for="EPosta" value="@Model.EPosta" class="form-control" placeholder="E Mail">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span class="text-danger" asp-validation-for="EPosta"></span>
        </div>
        <div class="input-group mb-3">
          <input asp-for="Password" value="@Model.Password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="input-group mb-3">
          <input asp-for="RePassword" value="@Model.RePassword" class="form-control" placeholder="Re Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
          <span class="text-danger" asp-validation-for="RePassword"></span>
        </div>

          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
          </div>
          <!-- /.col -->
        </div>
      </form>


      <!-- /.social-auth-links -->

    </div>
    <!-- /.login-card-body -->
  </div>