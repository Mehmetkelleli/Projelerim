
 @model List<Category>

 <div class="list-group">
    
    <a asp-controller="Shop" asp-action="List" class="list-group-item list-group-item-action">Kategoriler</a>

   @foreach (var category in Model)
    {
        <a asp-controller="Shop" 
        asp-action="List" 
        asp-route-category="@category.Url" 
        class="list-group-item list-group-item-action">
            @category.Name
        </a>
    }

</div>   