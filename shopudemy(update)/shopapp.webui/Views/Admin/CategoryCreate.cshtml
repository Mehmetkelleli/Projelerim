@model Category
@{
    ViewData["Title"] = "ProductUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-8">
    
<h1>Category Edit</h1>
<hr>
<form asp-controller="admin" asp-action="CategoryCreate" method="Post">
  <div class="form-group row">
    <label  class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text"  class="form-control" id="Name" asp-for="Name" value="@Model.Name">
    </div>
  </div>
    <div class="form-group row">
    <label  class="col-sm-2 col-form-label">Url</label>
    <div class="col-sm-10">
      <input type="text"  class="form-control" id="Url" asp-for="Url" value="@Model.Url">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2 ">
      <input type="hidden"  class="form-control"  asp-for="CategoryId" value="@Model.CategoryId">

        <button class="btn btn-danger" type="submit">Create</button>
    </div>
  </div>
</form>
</div>

