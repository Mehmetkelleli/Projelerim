@using shopapp.webui.ViewModels;
@model ProductCategoriesViewModel;
 
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/@Model.Product.ImageUrl" class="card-img img-fluid">
            </div>
            <div class="col-md-9">
                
                    <h1 class="card-title mb-3">@Model.Product.Name</h1><hr>
                    <a class="btn btn-link p-0 mb-3">
                        @foreach (var item in Model.Categories)
                        {
                            <a href="#" class="btn btn-link p-0 mb-3"> @item.Name </a>
                        }
                    </a>
                    <p class="card-text">@Model.Product.Description</p>
                    <div class="mb-3">
                        <h4 class="text-primary mb-3">
                            @Model.Product.Price
                        </h4>
                    </div>
                    <button type="submit" class="btn btn-primary btn-large">Add To Card</button>
            
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="p-3">@Model.Product.Description</p>
            </div>
        </div>
    </div>
</div>