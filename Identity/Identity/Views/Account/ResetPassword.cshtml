@model ResetPassword
@{
    ViewData["Title"] = "Reset Password";
}
<div class="col-md-8">
    
<h1>Reset</h1>
<hr>

        @if(TempData["Message"] != null)
            {
                <div class="alert alert-danger">@TempData["Message"]</div>
            }
    
    <form asp-controller="account" asp-action="resetpassword" method="Post">
  <div class="form-group row">
    <label  class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input class="form-control" asp-for="Password">
      <span class="text-danger" asp-validation-for="Password"></span>
    </div>
  </div>
  <div class="form-group row">
    <label  class="col-sm-2 col-form-label">Re Password</label>
    <div class="col-sm-10">
      <input class="form-control" asp-for="RePassword">
      
      <input type="hidden" class="form-control" asp-for="UserToken" value="@Model.UserToken">
      <input type="hidden" class="form-control" asp-for="UserId" value="@Model.UserId">
      <span class="text-danger" asp-validation-for="RePassword"></span>
    </div>
  </div>
  <button class="btn btn-success" type="submit">Reset</Button>
</form>
</div>

