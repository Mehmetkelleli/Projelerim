@model DtoSiteConfig
@{
    ViewData["Title"] = "SiteConfig";
    Layout = "~/Views/Shared/_LayoutRoot.cshtml";
}
<div class="content-wrapper" style="min-height: 2171.31px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Site Setting</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="root" asp-action="index">Home</a></li>
              <li class="breadcrumb-item active">Site Setting</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-primary">
              <!-- /.card-header -->
              <!-- form start -->
              <form asp-controller="root" method="post" enctype="multipart/form-data">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Site Logo</label>
                    <input asp-for="LogoUrl" type="hidden" class="form-control"  value="@Model.LogoUrl">
                    <input name="FileImage" type="file">
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Author Name</label>
                    <input asp-for="Author" class="form-control"  value="@Model.Author">
                    <span asp-validation-for="Author" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Meta Description</label>
                    <input asp-for="MetaDescription" class="form-control"  value="@Model.MetaDescription">
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Meta Tags</label>
                    <input asp-for="MetaTags" class="form-control"  value="@Model.MetaTags">
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Smtp Host</label>
                    <input asp-for="SmtpHost" class="form-control"  value="@Model.SmtpHost">
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Smtp Port</label>
                    <input asp-for="SmtpPort" class="form-control"  value="@Model.SmtpPort">
                    <span asp-validation-for="SmtpPort" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Smtp User</label>
                    <input asp-for="SmtpUser" class="form-control"  value="@Model.SmtpUser">
                    <span asp-validation-for="SmtpUser" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Smtp Passoword</label>
                    <input type="password" class="form-control"  asp-for="SmtpPassword" value="@Model.SmtpPassword">
                    <span asp-validation-for="SmtpPassword" class="text-danger"></span>
                    <input type="hidden" asp-for="Id" value="@Model.Id"></input>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-danger">Update Settting</button>
                </div>
              </form>
            </div>
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
